{
	"info": {
		"_postman_id": "cloudinary-test-collection",
		"name": "Cloudinary API Test Collection",
		"description": "Collection để test các endpoint Cloudinary trong Aurora Hotel System",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
