	"item": [
		{
			"name": "1. Test Connection",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has correct structure\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('code');",
							"    pm.expect(jsonData).to.have.property('message');",
							"    pm.expect(jsonData).to.have.property('data');",
							"});",
							"",
							"pm.test(\"Cloudinary connection successful\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.data.connected).to.eql(true);",
							"    pm.expect(jsonData.data.cloudName).to.eql('dqmlxcbxt');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/v1/cloudinary/test",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"cloudinary",
						"test"
					]
				},
				"description": "Kiểm tra kết nối với Cloudinary"
			},
			"response": []
		},
		{
			"name": "2. Upload Single File",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"File uploaded successfully\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.code).to.eql(200);",
							"    pm.expect(jsonData.data).to.have.property('publicId');",
							"    pm.expect(jsonData.data).to.have.property('url');",
							"    pm.expect(jsonData.data).to.have.property('secureUrl');",
							"    ",
							"    // Lưu publicId để dùng cho các test sau",
							"    pm.environment.set('lastUploadedPublicId', jsonData.data.publicId);",
							"    pm.environment.set('lastUploadedUrl', jsonData.data.secureUrl);",
							"});",
							"",
							"pm.test(\"Response contains file metadata\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.data).to.have.property('format');",
							"    pm.expect(jsonData.data).to.have.property('bytes');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "file",
							"type": "file",
							"src": [],
							"description": "Chọn file ảnh để upload (jpg, png, webp...)"
						},
						{
							"key": "folder",
							"value": "test",
							"type": "text",
							"description": "Tên folder trên Cloudinary (mặc định: uploads)"
						}
					]
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/cloudinary/upload?folder=test",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"cloudinary",
						"upload"
					],
					"query": [
						{
							"key": "folder",
							"value": "test"
						}
					]
				},
				"description": "Upload 1 file lên Cloudinary. Sau khi chạy, publicId sẽ được lưu vào environment variable để dùng cho các request sau."
			},
			"response": []
		},
