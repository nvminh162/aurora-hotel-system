		{
			"name": "4. Get Optimized Image URL",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Optimized URL generated\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.data).to.have.property('optimizedUrl');",
							"    pm.expect(jsonData.data.optimizedUrl).to.include('w_800');",
							"    pm.expect(jsonData.data.optimizedUrl).to.include('h_600');",
							"    pm.expect(jsonData.data.optimizedUrl).to.include('q_80');",
							"});"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Lấy publicId từ environment variable và encode",
							"var publicId = pm.environment.get('lastUploadedPublicId');",
							"if (publicId) {",
							"    var encodedPublicId = encodeURIComponent(publicId);",
							"    pm.variables.set('encodedPublicId', encodedPublicId);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/v1/cloudinary/optimize/{{encodedPublicId}}?width=800&height=600&quality=80",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"cloudinary",
						"optimize",
						"{{encodedPublicId}}"
					],
					"query": [
						{
							"key": "width",
							"value": "800",
							"description": "Chiều rộng mong muốn (pixels)"
						},
						{
							"key": "height",
							"value": "600",
							"description": "Chiều cao mong muốn (pixels)"
						},
						{
							"key": "quality",
							"value": "80",
							"description": "Chất lượng ảnh (1-100)"
						}
					]
				},
				"description": "Lấy URL ảnh đã được tối ưu hóa với kích thước và chất lượng tùy chỉnh. Sử dụng publicId từ file đã upload trước đó."
			},
			"response": []
		},
